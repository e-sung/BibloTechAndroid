<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.esung.biblotechandroid.Activities.SettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:padding="@dimen/padding_minimum_size"
        android:text="Server Address"
        android:textSize="@dimen/main_heading_font_size"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="http://"
            android:padding="@dimen/padding_minimum_size"
            android:textSize="@dimen/sub_heading_font_size" />

        <EditText
            android:id="@+id/etv_ip_0"
            android:layout_width="wrap_content"
            android:maxLength="3"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:padding="@dimen/padding_minimum_size"
            android:text="192"
            android:textSize="@dimen/sub_heading_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="@dimen/sub_heading_font_size"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="63dp" />

        <EditText
            android:id="@+id/etv_ip_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:maxLength="3"
            android:padding="@dimen/padding_minimum_size"
            android:text="192"
            android:textSize="@dimen/sub_heading_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="@dimen/sub_heading_font_size"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="63dp" />

        <EditText
            android:id="@+id/etv_ip_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:maxLength="3"
            android:inputType="numberDecimal"
            android:padding="@dimen/padding_minimum_size"
            android:text="192"
            android:textSize="@dimen/sub_heading_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="@dimen/sub_heading_font_size"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="63dp" />

        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/etv_ip_3"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:padding="@dimen/padding_minimum_size"
            android:text="192"
            android:maxLength="3"
            android:textSize="@dimen/sub_heading_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="@dimen/sub_heading_font_size"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="63dp" />

        <EditText
            android:layout_width="wrap_content"
            android:id="@+id/etv_port"
            android:maxLength="6"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_minimum_size"
            android:text="3030"
            android:textSize="@dimen/sub_heading_font_size" />

    </LinearLayout>
            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_setServerAddress"
            android:text="@string/set_server_address"
            />

</LinearLayout>
