<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_postTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_minimum_size"
            android:paddingTop="@dimen/padding_minimum_size"
            android:text="Title"
            android:textSize="@dimen/main_heading_font_size" />

        <TextView
            android:id="@+id/tv_writtenDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_minimum_size"
            android:paddingLeft="@dimen/padding_minimum_size"
            android:text="Written date : "
            android:textSize="@dimen/sub_heading_font_size"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:paddingBottom="@dimen/padding_minimum_size"
            android:paddingLeft="@dimen/padding_minimum_size"
            android:text="By : "
            android:textSize="@dimen/sub_heading_font_size"
            android:textStyle="italic"
            app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>
</android.support.v7.widget.CardView>
