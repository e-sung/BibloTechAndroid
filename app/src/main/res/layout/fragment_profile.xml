<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_minimum_size"
    android:paddingLeft="@dimen/padding_minimum_size"
    android:paddingTop="@dimen/padding_minimum_size">

    <ImageView
        android:id="@+id/iv_gravatar_view"
        android:layout_width="@dimen/profile_view_dimension"
        android:layout_height="@dimen/profile_view_dimension" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_minimum_size">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score : "
            android:textSize="@dimen/main_heading_font_size" />

        <TextView
            android:id="@+id/tv_rentScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_minimum_size"
            android:text="0"
            android:textSize="@dimen/main_heading_font_size"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rentable : "
            android:textSize="@dimen/main_heading_font_size" />

        <TextView
            android:id="@+id/tv_rentableBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/main_heading_font_size"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
